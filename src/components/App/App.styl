html {
    height: 100%
}

body {
    height: 100%
    margin: 0
}

#root {
    height: 100%
}

.app
    height: 100%

    font-family: Raleway, sans-serif

    background: #fff url('./img/bg.jpg')
    background-size: 200px 200px


    &__container
        display: flex
        flex-direction: column
        width: 300px
        height: 100%
        margin: auto
        padding: 0 2%

        background: rgba(255,255,255,0.9);


    &__header
        padding: 30px 0 25px


    &__main
        flex: 1


    &__title
        margin: 0

        text-align: center
        font-size: 42px
