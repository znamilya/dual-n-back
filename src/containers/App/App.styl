html {
    height: 100%
}

body {
    height: 100%
    margin: 0
}

#root {
    height: 100%
}

.app
    height: 100%

    font-family: Raleway, sans-serif

    background: rgba(0,0,0,.2)


    &__container
        display: flex
        flex-direction: column
        width: 300px
        height: 100%
        margin: auto


    &__header
        padding: 30px 0 25px


    &__main
        flex: 1


    &__title
        margin: 0

        text-align: center
        font-size: 42px
